<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/purple_700">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="150dp"
        android:background="@color/purple_700"
        app:cardBackgroundColor="#2F3844"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username"
                android:layout_width="260dp"
                android:layout_height="52dp"
                android:layout_below="@+id/counter"
                android:layout_alignBottom="@+id/donate"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginStart="54dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="103dp"
                android:background="@drawable/blankfill"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:hint="Your Key Will Be Here"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/counter"
                android:layout_width="75dp"
                android:layout_height="46dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginStart="93dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="93dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="300"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/donate"
                android:layout_width="148dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="107dp"
                android:layout_marginTop="189dp"
                android:layout_marginEnd="113dp"
                android:layout_marginBottom="61dp"
                android:text="Grab Key" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="46dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="Free From Ads At Just $1 (7 Days)"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Support"
        android:layout_width="75dp"
        android:layout_height="46dp"
        android:layout_below="@+id/card"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Stay Updated On Telegram"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/telegram"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/Support"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="160dp"
        android:src="@drawable/tg" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/topadView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="-1dp"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-2563787493982341/2353844485" />

</RelativeLayout>
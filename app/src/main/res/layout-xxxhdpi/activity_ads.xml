<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/purple_700">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="150dp"
        android:background="@color/purple_700"
        app:cardBackgroundColor="#2F3844"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginStart="56dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="56dp"
                android:background="@drawable/blankfill"
                android:fontFamily="@font/montserrat"
                android:hint="Your Key Will Be Here"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/counter"
                android:layout_width="75dp"
                android:layout_height="46dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginStart="93dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="107dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="300"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/donate"
                android:layout_width="112dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="127dp"
                android:layout_marginTop="144dp"
                android:layout_marginEnd="132dp"
                android:layout_marginBottom="66dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="donate.json"
                app:lottie_loop="true" />

            <TextView

                android:layout_width="75dp"
                android:layout_height="46dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="Free From Ads At Just $1 (7 Days)"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </RelativeLayout>



    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Support"
        android:layout_width="75dp"
        android:layout_height="46dp"
        android:layout_above="@+id/topadView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="87dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="59dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Stay Updated On Telegram"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/telegram"
        android:layout_width="97dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="153dp"
        android:layout_marginTop="574dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="95dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="telegram.json"
        app:lottie_loop="true" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/topadView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="-1dp"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-2563787493982341/2353844485" />

</RelativeLayout>